<head>
    <link rel="stylesheet" href="vendor/datatables/dataTables.bootstrap4.min.css">
</head>

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="col d-flex justify-content-end">
        <a class="btn btn-outline-secondary ml-1" href="showCreate"><i class="fas fa-plus-circle"></i> Create New Category</a>
    </div>
    <p></p>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="productcatTable" width="100%" cellspacing="1">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Product Category</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Category ID</th>
                            <th>Product Category</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#if productcat}}
                        {{#each productcat}}
                        <tr>
                            <td>{{id}}</td>
                            <td style="text-transform: capitalize;">{{product_name}}</td>
                            <td>
                                <form action="/productcat/delete/{{id}}" method="POST">
                                    <!-- Modal -->
                                    <div class="modal fade" id="deleteModal_{{id}}" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Are you sure?</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Do you really want to delete Product Category: <span style="color:red;">{{product_name}}</span>? This process cannot
                                                    be undone.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <input type="submit" value="Delete" class="btn btn-danger">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-block btn-danger" data-toggle="modal"
                                        data-target="#deleteModal_{{id}}">
                                        <span>Delete</span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br>

<!-- Page level plugins -->
<script src="vendor/datatables/jquery.dataTables.min.js"></script>
<script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="js/datamultiselect.js"></script>