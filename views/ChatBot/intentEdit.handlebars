    <script>
        var botQuestions = document.getElementsByClassName("BotQuestions");
        var botAnswers = document.getElementsByClassName("BotAnswers");
        var originalPhrases = [];
        var originalReplies = [];
        var arrayPhrase = [];
        var arrayReply = [];
        for (var i = 0, len = botQuestions.length; i < len; i++) {
            arrayPhrase.push(botQuestions[i].textContent);
            originalPhrases.push(botQuestions[i].textContent);
        }
        for (var i = 0, len = botAnswers.length; i < len; i++) {
            arrayReply.push(botAnswers[i].textContent);
            originalReplies.push(botAnswers[i].textContent);
        }
        console.log(arrayPhrase);
        console.log(arrayReply);

        function addPhrase(){
            var phrase = document.getElementById("trainingPhrases").value;
            arrayPhrase.push(phrase);
            var newPhrase = document.createElement("p")
            newPhrase.textContent = phrase;
            newPhrase.className = "BotQuestions";
            document.getElementById("setQuestions").appendChild(newPhrase);
            console.log(arrayPhrase);



            
        }
        function resetPhrase(){
            document.querySelectorAll('.BotQuestions').forEach(e => e.remove());
            arrayPhrase = [];
            originalPhrases = [];
            alert("Reset completed!");



            
        }
        function addReply(){
            var phrase = document.getElementById("botReply").value;
            arrayReply.push(phrase);
            var newPhrase = document.createElement("p")
            newPhrase.textContent = phrase;
            newPhrase.className = "BotAnswers";
            document.getElementById("setAnswers").appendChild(newPhrase);
            console.log(arrayReply);




            
        }
        function resetReply(){
            document.querySelectorAll('.BotAnswers').forEach(e => e.remove());
            arrayReply = [];
            originalReplies = [];
            alert("Reset completed!");



            
        }
        function sendStuff(){
            // var url= 'rooms/chuuSend';
            var data = {
                displayName : document.getElementById("displayName").value,
                trainingPhrases : arrayPhrase,
                botReplies : arrayReply,
                originalPhrases : originalPhrases,
                originalReplies : originalReplies


            }
            var JSONdata = JSON.stringify(data);
            console.log(JSONdata);
            $.ajax({
                url: '/chatBot/intentEdited/' + document.getElementById("intentPath").value,
                data: JSONdata,
                contentType: 'application/json',
                dataType : 'json',
                type: 'POST'
            }).done(function(result) {
                console.log("Success!");
                
                console.log(result);
            }).fail(function(jqXHR, textStatus, errorThrown) {
                console.log("fail: ",textStatus, errorThrown);
            });
            setTimeout(() => { location.href="/chatBot/chatBotList" }, 2000);
            
        
    }






    </script>
