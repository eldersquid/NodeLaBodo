<style></style>
<section class="ftco-section">
        {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}

        {{#each errors}}
        <div class="alert alert-danger">{{text}}</div>
        {{else}}
        {{/each}}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section" style="">Hotel La Bodo</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="text-wrap p-4 p-lg-5 d-flex img d-flex align-items-end"
                        style="background-image: url(images/bg.jpg); height:1000px;">
                        </b></b>
                        <div class="text w-100" style="margin-bottom: 400px;">
                            <h2 class="mb-4">Welcome to Hotel La Bodo</h2>
                            <p>We provide the comfort and luxury of hotels during the COVID-19 Pandemic.</p>
                        </div>
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <h3 class="mb-3">Create an account</h3>
                        <form action="/login/signup" class="signup-form block-register" method="post" >
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group d-flex align-items-center">
                                        <label class="label" for="name">Your Name</label>
                                        <input type="text" class="form-control" name="name" value="{{name}}" placeholder="Name" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex align-items-center">
                                        <label class="label" for="name">Username</label>
                                        <input type="text" class="form-control" name="username" value="{{username}}" placeholder="Username" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex align-items-center">
                                       <label class="label" for="email">Email</label>
                                         <input type="text" class="form-control" name="email" value="{{email}}" placeholder="Email" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex align-items-center">
                                        <label class="label" for="phone">Phone Number</label>
                                        <input type="text" class="form-control" name="phone_num" value="{{phone_num}}" placeholder="Phone Number" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex align-items-center">
                                        <label class="label" for="Password">Password</label>
                                        <input type="password" class="form-control" name="password" value="{{password}}" placeholder="Password" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex align-items-center">
                                        <label class="label" for="Password"></label>
                                        <input type="password" class="form-control" name="staff_repeat" value="{{staff_repeat}}" placeholder="Repeat Password" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex align-items-center">
                                        {{!-- <div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle" type="button"
                                                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false" value="{{package_deal}}">
                                                Package Deal
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" href="#">Zoo wee Mama</a>
                                                <a class="dropdown-item" href="#">Spend Away</a>
                                                <a class="dropdown-item" href="#"></a>
                                            </div>
                                        </div> --}}
                                        <label class="label" for="Package Deal">Package Deal</label>
                                        <select name="package_deal" value="{{package_deal}}" class="btn btn-secondary submit p-3" required>
                                            <option value="zoo wee mama">Zoo Wee Mama</option>
                                            <option value="spend away">Spend Away</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12 my-4">
                                    <div class="form-group">
                                        <div class="w-100">
                                            <label class="checkbox-wrap checkbox-primary">I agree all statements in
                                                terms of service
                                                <input type="checkbox" checked required>
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-secondary submit p-3">Register</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                        <div class="social-wrap">
                            <p class="or">
                                <span>or</span>
                            </p>
                            <p class="mb-3 text-center">Signup with this services</p>
                            <p class="social-media d-flex justify-content-center">
                                <a href="/mainlogin" class="social-icon facebook d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                    <a href="/mainlogin" class="social-icon google d-flex align-items-center justify-content-center"><span class="fa fa-google"></span></a>
                            </p>
                        </div>
                        <div class="w-100 text-center">
                            <p class="mt-4">Existing User?<a href="/mainlogin"> Sign In</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>