<div class="page-content page-container" id="page-content">
    <br><br><br><br><br><br>
    {{>_errors}}
    <center>
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">
                                        <img id="profileImage" name="profileImage" src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                                            alt="User-Profile-Image" />
                                    </div>
                                    <label class="f-w-600" for="name" style="font-size:10px;">Your Name</label>
                                    <div class="m-b-25" style="font-size:10px;">
                                        <input type="text" class="form-control f-w-600" name="name" value="{{signup.name}}" placeholder="Name">
                                    </div>
                                    <label class="f-w-600" for="name" style="font-size:10px;">Your Username</label>
                                    <div class="m-b-25" style="font-size:10px;">
                                        <input type="text" class="form-control f-w-600" name="username" value="{{signup.username}}" placeholder="username">
                                    </div>
                                    <div class="m-b-25" style="font-size:10px;">
                                        <input type="file" name="profilePicUpload" id="profilePicUpload"
                                        >
                                        <input type="hidden" name="trueFileProfilePic" id="trueFileProfilePic"
                                        >
                                        <div class="font-weight-bold text-danger small" id="profileErr" style="display: none"></div>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Email</p>
                                            <input type="text" style="font-size:10px;" class="form-control" name="email" value="{{signup.email}}" placeholder="email">
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Phone Number</p>
                                            <input type="text" style="font-size:10px;" class="form-control" name="phoneno" value="{{signup.phone_num}}" placeholder="phoneno">
                                        </div>
                                    </div>
                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Other
                                        Information</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Package Deal</p>
                                            <input type="text" style="font-size:10px;" class="form-control" name="packagedeal" value="{{signup.package_deal}}" placeholder="packagedeal">
                                        </div>
                                    </div>
                                    <br><br><br><br>
                                    <div class="col d-flex justify-content-end">
                                        <a class="btn btn-secondary" href="/mainlogin">Update changes</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </center>
</div>

<script>
    $('#profilePicUpload').on('change', function () {
        alert("goes here");
		var file = $("#profilePicUpload")[0].files[0];
		var formdata = new FormData();
		formdata.append('profilePicUpload', file);
        alert("then it goes here");
		$.ajax({
			url: '/profilePicUpload',
			data: formdata,
			contentType: false,
			processData: false,
			type: 'POST',
			'success': (data) => {
				console.log(data);
				console.log(data.path);
				$('#profileImage').attr('src', data.path);
				$('#trueFileProfilePic').attr('value', data.file);

				if (data.err) {
					$('#profileErr').show();
					$('#profileErr').text(data.err.message);
				}
				else {
					$('#profileErr').hide();
				}
			},
			error: function (xhr, errorType, exception) {
				alert(errorType);
			}


		});
	});

</script>