	<!-- Modal -->
<div class="modal fade" id="cartModal" tabindex="-1" role="dialog" id="cart">
  <div class="modal-dialog" style="max-width:40%;" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bookings</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="show-cart">
                <li>???????</li>
            </ul>
            <div>You have <span class="total-count">X</span> bookings currently.</div>
            <div>Cost:$<span class="total-cart"></span></div>
      </div>
      <div class="modal-footer">
          <button class="clear-cart btn btn-danger">Clear Bookings</button>
        <button type="submit" class="btn btn-primary" id="pay_now" data-target="#cartModal" data-dismiss="modal">Check Out</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



	<div class="section padding-top-bottom over-hide background-grey">
		<div class="container">
			 <div class="row">
          <div class="col">
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cartModal" >Bookings (<span class="total-count"></span>)</button>
          </div>
      </div>
			<div class="row justify-content-center">
				{{#if roomType }}
                                            
                	{{#each roomType }}
					<div class="col-md-6">
					<div class="room-box background-white">
						<div class="room-name">{{roomName}}</div>
						<div class="room-per">
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
						</div>
						<img id="hospital_image" src="{{roomImage}}" alt=""class="border img-thumbnail img-fluid"style="height:80%;width:90%">
						<div class="room-box-in">
							<h5 class="">{{type}}</h5>
							<p class="mt-3">{{description}}</p>
							<a class="mt-1 btn btn-primary" href="/rooms/details/{{type_id}}">book from {{roomPrice}}$</a>
							<div class="room-icons mt-4 pt-4">
								<img src="/img/svg/cocktail.svg" alt="">
								<img src="/img/svg/bed.svg" alt="">
								<img src="/img/svg/food.svg" alt="">
								<a href="/">{{roomName}}</a>
							</div>
						</div>
					</div>
				</div>
					{{/each}}


                {{else}}
					<h5 class="">No rooms available at the moment.</h5>
                {{/if}}
			</div>
		</div>
	</div>



