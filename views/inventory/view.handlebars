<head>
    <link rel="stylesheet" href="vendor/datatables/dataTables.bootstrap4.min.css">
</head>

<div class="container-fluid">
    <h1 class="display-5">Item List</h1>
    <div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="productcatTable" width="100%" cellspacing="1">
                        <thead>
                            <tr>
                                <th>Inventory ID</th>
                                <th>Item Name</th>
                                <th>Supplier</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Inventory ID</th>
                                <th>Item Name</th>
                                <th>Supplier</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {{#if inventory}}
                            {{#each inventory}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{item_name}}</td>
                                <td>{{supplier}}</td>
                                <td>{{product_name}}</td>
                                <td>{{quantity}}</td>
                                <td><a href="/inventory/showUpdate/{{id}}" style="display: flex; justify-content: center;"
                                        class="btn btn-warning">Update</a></td>
                                <td>
                                    <form action="/inventory/delete/{{id}}" method="POST">

                                        <!-- Modal -->
                                        <div class="modal fade" id="deleteModal_{{id}}" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Are you sure?</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete Item Name: <span
                                                            style="color:red;">{{item_name}}</span>,
                                                        Supplier:
                                                        <span style="color:red;">{{supplier}}</span>, Product Category: <span style="color:red;">{{product_name}}</span>?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <input type="submit" value="Delete" class="btn btn-danger">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-block btn-danger" data-toggle="modal"
                                            data-target="#deleteModal_{{id}}">
                                            <span>Delete</span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br>
</div>

<!-- Page level plugins -->
<script src="vendor/datatables/jquery.dataTables.min.js"></script>
<script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="js/datamultiselect.js"></script>