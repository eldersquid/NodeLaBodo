<head>
    <link rel="stylesheet" href="vendor/datatables/dataTables.bootstrap4.min.css">
</head>

<div class="container-fluid">
    <h1 class="display-5">Supplier</h1>
    <div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="productcatTable" width="100%" cellspacing="1">
                        <thead>
                            <tr>
                                <th>Supplier ID</th>
                                <th>Company Name</th>
                                <th>UEN Number</th>
                                <th>Email</th>
                                <th>Office Number</th>
                                <th>Product Name</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Supplier ID</th>
                                <th>Company Name</th>
                                <th>UEN Number</th>
                                <th>Email</th>
                                <th>Office Number</th>
                                <th>Product Name</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {{#if supplier}}
                            {{#each supplier}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{company_name}}</td>
                                <td>{{uen_number}}</td>
                                <td>{{email}}</td>
                                <td>{{office_number}}</td>
                                <td style="text-transform: capitalize;">{{product_name}}</td>
                                <td><a href="/supplier/showUpdate/{{id}}" style="display: flex; justify-content: center;"
                                        class="btn btn-warning">Update</a></td>
                                <td>
                                    <form action="/supplier/delete/{{id}}" method="POST">

                                        <!-- Modal -->
                                        <div class="modal fade" id="deleteModal_{{id}}" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Are you sure?</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete Supplier: <span
                                                            style="color:red;">{{company_name}}</span>,
                                                        UEN Number: 
                                                        <span style="color:red;">{{uen_number}}</span>?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <input type="submit" value="Delete" class="btn btn-danger">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-block btn-danger" data-toggle="modal"
                                            data-target="#deleteModal_{{id}}">
                                            <span>Delete</span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br>
</div>

<!-- Page level plugins -->
<script src="vendor/datatables/jquery.dataTables.min.js"></script>
<script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="js/datamultiselect.js"></script>