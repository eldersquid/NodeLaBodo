<div class="container" id="container">
    <div class="form-container sign-in-container">
        <form method="POST" action="/supplier/forgetpassword" id="form">
            <h1>Forget Password</h1>
            <input class="form-control" id="supplier_id" name="supplier_id" required type="text" value="{{supplier_id}}"
                placeholder="Supplier ID">
            <input class="form-control" id="company_name" name="company_name" required type="text" value="{{company_name}}"
                placeholder="Company Name">
            <input class="form-control" id="uen_number" name="uen_number" required type="text" value="{{uen_number}}"
                placeholder="UEN Number">
            <button type="submit" value="Submit" id="submit-btn" data-toggle="modal" data-target="#modalReply">Submit</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1>Welcome Back, Hotel La Bodo's Supplier</h1>
                <p>Forget Password? Key in your registered details.</p>
                <button class="ghost"><a href="/supplier/showLoginSignup">Click here to Login</a></button>
                <br>
                <button class="ghost"><a href="#">Click here to Sign Up</a></button>
            </div>
        </div>
    </div>
</div>